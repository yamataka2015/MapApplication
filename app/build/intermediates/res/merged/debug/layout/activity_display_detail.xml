<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1">

        <TableRow android:id="@+id/tableRow1">
<TextView
android:id="@+id/TextView_placename_title"
android:text="@string/caption_placename"
/>
            <TextView
android:id="@+id/TextView_placename_value"
android:layout_column="1"
                android:layout_span="2" />
</TableRow>

        <TableRow android:id="@+id/tableRow2">
	        <TextView
	            android:id="@+id/TextView_placename_en_title"
	            android:text="@string/caption_placename_en"
	        />
	        <TextView
	            android:id="@+id/TextView_placename_en_value"
                android:layout_column="1"
                android:layout_span="2" />
	    </TableRow>

        <TableRow android:id="@+id/tableRow3">
            <TextView
                android:id="@+id/TextView_address_title"
                android:text="@string/caption_address"
            />
            <TextView
                android:id="@+id/TextView_address_value"
                android:layout_column="1"
                android:layout_span="2" />
        </TableRow>

        <TableRow android:id="@+id/tableRow4">
<TextView
android:id="@+id/TextView_Telephone_title"
android:text="@string/caption_telephone"
/>
<TextView
android:id="@+id/TextView_Telephone_value"
android:layout_column="1"
    android:layout_span="2" />
</TableRow>

        <TableRow android:id="@+id/tableRow5">
	        <TextView
	            android:id="@+id/TextView_Remark_title"
	            android:text="@string/caption_remark"
	        />
	        <TextView
	            android:id="@+id/TextView_Remark_value"
                android:layout_column="1"
                android:layout_span="2" />
	    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btniine"
                android:layout_column="0"
                android:onClick="onClickBtniine" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DisButton"
                android:id="@+id/dislikebutton"
                android:layout_column="1"
                android:onClick="onClickdislikebutton" />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyze"
                android:id="@+id/Btn_an"
                android:layout_column="0"
                android:onClick="onClickBtnAn"
                android:nestedScrollingEnabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:id="@+id/Delete_Bt"
                android:layout_column="1"
                android:onClick="onClickdeletebutton" />


        </TableRow>

        <TableRow android:id="@+id/tableRow6">
	        <ListView
	            android:id="@+id/ListView_comment"
	            android:layout_span="9">
	        </ListView>
	    </TableRow>
    </TableLayout>
    <EditText
        android:id="@+id/EditText_Comment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@+id/btnAddComment"
        android:inputType="text"
    />
    <Button
        android:id="@+id/btnAddComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClickBtnAddComment"
        android:text="@string/Button_AddComment"
    />

</RelativeLayout><!-- From: file:/C:/Users/MADOKA/Documents/GitHub/MapApplication/app/src/main/res/layout/activity_display_detail.xml -->