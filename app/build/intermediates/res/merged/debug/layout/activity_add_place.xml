<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1">
	    <TableRow android:id="@+id/tableRow1">
	        <TextView
	            android:id="@+id/textView_placename"
	            android:text="@string/caption_placename"
	        />
		    <EditText
	            android:id="@+id/editText_placename"
	            android:inputType="text"
	         />
	    </TableRow>
	    <TableRow android:id="@+id/tableRow2">
	        <TextView
	            android:id="@+id/TextView_placename_en"
	            android:text="@string/caption_placename_en"
	        />
	        <EditText
	            android:id="@+id/EditText_placename_en"
	            android:inputType="text"
	        />
	    </TableRow>
	    <TableRow android:id="@+id/tableRow3">
	        <TextView
	            android:id="@+id/TextView_address"
	            android:text="@string/caption_address"
	        />
	        <EditText
	            android:id="@+id/EditText_address"
	            android:inputType="text"
	        />
	    </TableRow>
	    <TableRow android:id="@+id/tableRow4">
	        <TextView
	            android:id="@+id/TextView_Telephone"
	            android:text="@string/caption_telephone"
	        />
	        <EditText
	            android:id="@+id/EditText_Telephone"
	            android:inputType="phone"
	        />
	    </TableRow>
	    <TableRow android:id="@+id/tableRow5">
	        <TextView
	            android:id="@+id/TextView_Remark"
	            android:text="@string/caption_remark"
	        />
	        <EditText
	            android:id="@+id/EditText_Note"
	            android:inputType="text"
	        />
	    </TableRow>
	    <TableRow android:id="@+id/tableRow6"
	    >
	        <Button
	            android:id="@+id/button1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:onClick="onClickBtnAddPlace"
	            android:text="@string/Button_AddPlace"
	        />
	    </TableRow>
    </TableLayout>
</LinearLayout><!-- From: file:/C:/Users/masaki-n/Documents/Android/MapApplication/app/src/main/res/layout/activity_add_place.xml -->